<body>
    <div id="nav">
        <div class="col-sm nav-align">
            <h1>Confetti Cuisine</h1>
        </div>
        <div class="col-sm nav-align">
            <a href="/"> <span class="button">Home</span></a>
            <a href="/courses"><span class="button">Courses</span></a>
            <a href="/contact"><span class="button">Contact</span></a>
            <a href="/users"><span class="button">Users</span></a>
            <%- include('courses/_coursesModal') %>
        </div>
    </div>
    <div style="margin: auto;">
        <div class="login">
        <% if (loggedIn) { %>
            <p>Logged in as
                <a href="<%`/users/${currentUSer._id}`%>">
                    <%= currentUser.fullName %>
                </a>
                <span class="log-out">
            <a href="/users/logout">Log Out</a>
            </span>
                <% } %>
                <span class="log-in">
                    <a href="/users/login">Log In</a>
                </span>
                    <div class="flashes">
                        <% if(flashMessages) { %>
